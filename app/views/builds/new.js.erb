var jqxhr = $.post(
  '/builds/create',
  { target_host: '<%= @target_host %>' }
);

jqxhr.done(
  function(buildID) {
    window.location = '/builds/show/' + buildID
  }
);

jqxhr.fail(
  function(x) {
    alert('ERROR: ' + JSON.stringify(x));
  }
);

$( 'body' ).html( '<img src="/images/ajax-loader.gif" />' );
