var jqxhr = $.post(
  '/build/create',
  {
    target_address: '<%= @target_address %>',
    target_port: '<%= @target_port %>'
  }
);

jqxhr.done(
  function(buildID) {
    window.location = '/build/' + buildID
  }
);

jqxhr.fail(
  function(x) {
    alert('ERROR: ' + JSON.stringify(x));
  }
);

$( 'body' ).html( '<div class="viewport">\
  <p class="hint">Please wait while we are building software for you!</p>\
  <img src="/images/ajax-loader.gif" />\
  </div>' );
